{
  "agents": {
    "defaults": {
      "workspace": "~/clawd",
      "model": {
        "primary": "anthropic/claude-sonnet-4-20250514",
        "fallbacks": ["anthropic/claude-3-5-haiku-20241022"]
      },
      "thinkingDefault": true,
      "timeoutSeconds": 600,
      "contextPruning": "adaptive",
      "compaction": {
        "enabled": true,
        "memoryFlush": true
      },
      "blockStreamingDefault": false
    }
  },
  "tools": {
    "profile": "full"
  },
  "mcp": {
    "servers": {
      "notion": {
        "transport": "http",
        "url": "https://mcp.notion.com/mcp"
      }
    }
  },
  "browser": {
    "enabled": true,
    "headless": true,
    "noSandbox": true,
    "executablePath": "/usr/bin/chromium-browser"
  },
  "channels": {
    "whatsapp": {
      "dmPolicy": "allowlist",
      "allowFrom": [],
      "sendReadReceipts": true
    }
  },
  "messages": {
    "inbound": {
      "debounceMs": 2000
    }
  },
  "session": {
    "scope": "per-sender"
  },
  "cron": {
    "enabled": true
  },
  "logging": {
    "level": "info",
    "redactSensitive": "tools"
  }
}
