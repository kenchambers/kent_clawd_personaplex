# ============================================
# REQUIRED
# ============================================

# PersonaPlex - Get your token from https://huggingface.co/settings/tokens
# You must also accept the model license at https://huggingface.co/nvidia/personaplex-7b-v1
HF_TOKEN=

# Anthropic API - Get your key from https://console.anthropic.com/
ANTHROPIC_API_KEY=

# ============================================
# OPTIONAL (have sensible defaults)
# ============================================

# Anthropic model to use for command extraction
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Moltbot workspace path
MOLTBOT_WORKSPACE=~/clawd

# PersonaPlex voice model
# Options: NATF0-3 (natural female), NATM0-3 (natural male), VARF0-4, VARM0-4 (variety)
PERSONAPLEX_VOICE=NATM1

# ============================================
# TWO-WAY COMMUNICATION (optional)
# ============================================

# Your phone number for WhatsApp notifications (E.164 format)
WHATSAPP_PHONE=

# Public URL of your deployment (for WhatsApp notification links)
PERSONAPLEX_URL=https://your-deployment.salad.cloud

# Notification settings
NOTIFY_ON_COMPLETE=true
NOTIFY_ON_QUESTION=true
EXECUTION_TIMEOUT_MINUTES=60

# ============================================
# WORKSPACE PERSISTENCE (optional)
# ============================================

# Supabase Storage (S3-compatible) - for workspace persistence across node reallocations
# Get these from: Supabase Dashboard > Project Settings > Storage > S3 Access Keys
SUPABASE_S3_ENDPOINT=https://<project-ref>.supabase.co/storage/v1/s3
SUPABASE_S3_ACCESS_KEY=
SUPABASE_S3_SECRET_KEY=
SUPABASE_BUCKET=moltbot-workspace
SYNC_INTERVAL=300

# ============================================
# SERVICE INTEGRATIONS (optional)
# ============================================

# TradesViz auto-login (browser automation)
# Credentials are passed securely via temp file, not exposed in process list
TRADESVIZ_USERNAME=
TRADESVIZ_PASSWORD=

# Notion - configured via MCP OAuth, no env vars needed
# After deployment, run: moltbot mcp auth notion
